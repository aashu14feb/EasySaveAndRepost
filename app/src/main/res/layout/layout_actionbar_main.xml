<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actionbar_id"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="center"
    android:background="@color/md_white_1000"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.example.aashish.instasaverapp.widget.CustomTextView
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dp_12"
        android:text="@string/mdi_menu"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/dp_24"
        android:visibility="gone"
        app:custom_font="materialdesignicons.ttf" />

    <com.example.aashish.instasaverapp.widget.CustomTextView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dp_12"
        android:text="@string/mdi_arrow_left"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/dp_24"
        android:visibility="gone"
        app:custom_font="materialdesignicons.ttf" />

    <com.example.aashish.instasaverapp.widget.CustomTextView
        android:id="@+id/tv_app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/dp_22"
        app:custom_font="segoe_ui_regular.ttf" />

    <com.example.aashish.instasaverapp.widget.CustomTextView
        android:id="@+id/tv_actionbar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:paddingRight="@dimen/dp_24"
        android:text="rain"
        android:textAllCaps="false"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/dp_16"
        android:visibility="gone"
        app:custom_font="segoe_ui_regular.ttf" />

    <com.example.aashish.instasaverapp.widget.CustomTextView
        android:id="@+id/icon_setting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:foreground="@drawable/ripple_rectangle"
        android:text="@string/mdi_layers"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/dp_24"
        android:visibility="visible"
        app:custom_font="materialdesignicons-webfont.ttf" />

    <com.example.aashish.instasaverapp.widget.CustomTextView
        android:id="@+id/icon_heart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:text="@string/mdi_star_half"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/dp_24"
        android:foreground="@drawable/ripple_rectangle"
        android:visibility="visible"
        app:custom_font="materialdesignicons-webfont.ttf" />

    <com.example.aashish.instasaverapp.widget.CustomTextView
        android:id="@+id/icon_instagram"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:foreground="@drawable/ripple_rectangle"
        android:padding="@dimen/dp_8"
        android:text="@string/mdi_instagram"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/dp_24"
        android:visibility="gone"
        app:custom_font="materialdesignicons-webfont.ttf" />

</LinearLayout>